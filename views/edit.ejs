 <form action="/products/<%=product._id%>/edit?_method=PUT" method="POST">
     <input type="text" name="p[name]" placeholder="name" value=<%=product.name%>>
     <input type="text" name="p[image]" placeholder="image url" value=<%=product.image%>>
     <input type="text" name="p[price]" placeholder="price" value=<%=product.price%>>
     
     <input type="text" name="p[type]" placeholder="type" value=<%=product.type%>>
     <input type="submit" value="Submit">
 </form>
 
