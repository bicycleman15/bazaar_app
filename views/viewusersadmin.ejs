<!-- nav bar ok working on all pages--> 
  <div class="ui menu">
    <a href="/" class="item">Home</a>
    <a href="/products" class="item active">Products</a>
    <div class="right menu">
      <%if(!currentUser){%>
      <div class="item">
        <a href="/register" class="ui primary button"><i class="address book icon"></i>Sign Up</a>
      </div>

      <div class="item">
        <a href="/login" class="ui primary button">Login</a>
      </div>
      <%} else {%>
      <div class="item">
        <a href="users/<%=currentUser._id%>" class="ui button"><i class="user outline icon"></i><%=currentUser.username%></a>
      </div>
      <div class="item">
        <a href="/logout" class="ui primary button">Logout</a>
      </div>
      <%}%>

      <%if(currentUser && currentUser.isadmin){%>
      <div class="item">
        <div><a href="/admin" class="ui button">View Admin Page</a></div>
      </div>
    <%}%>
    </div>
  </div>  
<!-- nav bar -->

<h1>This are the users that have registered here</h1>

<%for(var i=0;i<users.length;i++){%>
  <div>
      <%if(!users[i].isadmin){%>
     <form action="/users/<%=users[i]._id%>?_method=DELETE" method="POST">
         
         <input type="submit" value="Click here to remove <%=users[i].username%>">
     </form>  
     <%}%>
 </div>
 <%}%>